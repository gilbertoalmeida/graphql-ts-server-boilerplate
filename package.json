    "jest": "^22.4.3",
    "nodemon": "^2.0.3",
    "ts-jest": "^25.4.0",
    "ts-node": "^8.9.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "3.8.3"
  },
  "dependencies": {
    "@gql2ts/from-schema": "^2.0.0-4",
