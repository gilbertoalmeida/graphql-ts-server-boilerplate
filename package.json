    "yup": "^0.28.5"
  },
  "scripts": {
    "start": "NODE_ENV=development nodemon --exec ts-node --files src/index.ts",
    "test": "NODE_ENV=test TS_NODE_FILES=true jest --runInBand --forceExit",
    "test-watch": "NODE_ENV=test TS_NODE_FILES=true jest --watch",
    "gen-schema-types": "ts-node src/scripts/createTypes.ts"
  },
  "jest": {
    "globalSetup": "./src/testSetup/callSetup.js",
    "testEnvironment": "node",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
